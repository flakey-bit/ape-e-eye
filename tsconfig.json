{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "watch": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es2015",
            "scripthost",
            "es2015.iterable"
        ],
        "target": "ES5"
    },
    "angularCompilerOptions": {
        "entryModule": "./ng-app/app.module#AppModule"
    }
}